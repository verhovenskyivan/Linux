# Просмотр текущей загрузки системы и использования ресурсов
top

# Информация о процессоре
cat /proc/cpuinfo

# Информация о памяти
free -m

# Просмотр использования диска
df -h

# Просмотр текущих активных соединений
netstat -an | grep ESTABLISHED

# Просмотр активных процессов
ps aux

# Проверка уровня I/O диска
iostat

# Проверка сетевой активности
iftop

# Проверка общей статистики сети
sar -n DEV 1 5

# Проверка нагрузки на сетевой интерфейс
ethtool <interface>

# Просмотр системных журналов для выявления ошибок или проблем
dmesg

# Или просмотр журнала syslog
cat /var/log/syslog

# Или просмотр журнала messages (в некоторых системах)
cat /var/log/messages
